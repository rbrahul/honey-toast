{
  "name": "@rbrahul/toast",
  "description": "A framework agonstic notification or Toast alert library",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "notification",
    "toast",
    "push",
    "alert",
    "message"
  ],
  "main": "./dist/toast.umd.js",
  "module": "./dist/toast.es.js",
  "source": "src/index.ts",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/toast.es.js",
      "require": "./dist/toast.umd.js"
    },
    "./style.css": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx vite .",
    "lint": "npx eslint --fix",
    "build": "vite build",
    "example-build": "vite build --outDir ./example/dist --emptyOutDir true -c example-page.vite.config.ts && rm -rf ./example/dist/src",
    "prepare": "husky"
  },
  "author": "Rahul Baruri<rahulbarui1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-svgr": "^4.3.0"
  }
}
