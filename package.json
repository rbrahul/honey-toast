{
  "name": "honey-toast",
  "description": "A framework agonstic Toast alert or notification UI library with tons of customization options",
  "version": "1.0.1",
  "license": "MIT",
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "notification",
    "toast",
    "push",
    "alert",
    "message",
    "ui",
    "javascript",
    "vanilla",
    "typescript",
    "dialog"
  ],
  "main": "./dist/toast.umd.js",
  "module": "./dist/toast.es.js",
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": [
        "./dist/*.d.ts"
      ],
      "import": "./dist/toast.es.js",
      "require": "./dist/toast.umd.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx vite .",
    "lint": "npx eslint --fix",
    "build": "vite build",
    "build:example": "npm run build && vite build --outDir ./example/dist --emptyOutDir true -c example-page.vite.config.ts",
    "prepare": "husky"
  },
  "author": "Rahul Baruri<rahulbarui1@gmail.com>",
  "homepage": "https://rbrahul.github.io/honey-toast",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbrahul/honey-toast.git"
  },
  "bugs": {
    "url": "https://github.com/rbrahul/honey-toast/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-svgr": "^4.3.0"
  }
}
